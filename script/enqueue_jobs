#!/usr/bin/env ruby
# encoding: utf-8

require File.join(File.dirname(__FILE__), '../config/environment.rb')
extend ActiveSupport::Benchmarkable

q = Carrot.queue('search.index')

Metastore.connection.execute("SELECT id FROM #{Metastore.table_name} limit 1000000").each do |m|
  q.publish(m['id'])
end

Carrot.stop
